{{>layout/header}}
{{>layout/nav}}
<center>
    <h1>Admin Page</h1>
    <div>
        <h4>전체 회원 관리</h4>
        <div class="col-md-10">
            <div>
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th>회원번호</th>
                        <th>이름</th>
                        <th>아이디</th>
                        <th>전화번호</th>
                        <th>주소</th>
                        <th>상세주소</th>
                        <th>이메일</th>
                        <th>매너온도</th>
                        <th>회원유형</th>
                        <th>비고</th>
                    </tr>
                    </thead>

                    <tbody id="tbody">
                    {{#allUsers}}
                        <tr>
                            <td>{{no}}</td>
                            <td>{{name}}</td>
                            <td>{{id}}</td>
                            <td>{{#phone}}{{phone}}{{/phone}}</td>
                            <td>{{#address}}{{address}}{{/address}}</td>
                            <td>{{#detailAddress}}{{detailAddress}}{{/detailAddress}}</td>
                            <td>{{email}}</td>
                            <td>{{score}}</td>
                            <td>{{role}}</td>
                            <td>
                                <a href="/adminPage/users/modify/{{no}}" role="button" class="btn btn-secondary">회원정보 수정</a>
                                <button type="button" class="btn btn-danger" onclick="usersDelete({{no}}, '{{role}}');">회원탈퇴</button>
                            </td>
                        </tr>
                    {{/allUsers}}
                    </tbody>
                </table>
                <nav aria-label="Page navigation    ">
                    <ul class="pagination justify-content-center" id="pageNum">
                    </ul>
                </nav>
            </div>
        </div>
        <input type="hidden" id="now" value="0">
        <input type="hidden" id="max" value="{{page}}">
    </div>
    <div class="post-description">
        <h4>전체 게시물 관리</h4>
    </div>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center" id="board">
                {{#posts}}
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a href="/posts/{{id}}">
                                <img src="{{thumbnail}}" class="card-img-top" alt="{{title}}" width="200px" height="200px">
                            </a>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{title}}</h5>
                                    <!-- Product price-->
                                    <p>{{price}}원</p>
                                    <p>{{status}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/posts}}
            </div>
        </div>
    </section>
    <a href="#" id="more">더 보기</a>
    <input type="hidden" id="id" value="0">
    <input type="hidden" id="cursor" value="1">
    <input type="hidden" id="kind" value="all">
    <input type="hidden" id="value">
</center>
{{>layout/footer}}
{{>layout/js}}
<script src="/js/admin.js"></script>
</body>
</html>