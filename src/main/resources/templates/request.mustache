{{>layout/header}}
<link rel="stylesheet" href="/css/index.css"/>
<header class="bg-white py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-black-50">
            <h1 class="display-4 fw-bolder">Your Mine</h1>
            <p class="lead fw-normal text-black-50 mb-0">123123123</p>
        </div>
    </div>
</header>
{{>layout/nav}}
<div id="carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item carousel-out active">
            <a href="/">
                <img src="https://placeimg.com/1000/300/animals" class="d-block w-100" alt="...">
            </a>
        </div>
        <div class="carousel-item carousel-out">
            <a href="/">
                <img src="https://placeimg.com/900/300/arch" class="d-block w-100" alt="...">
            </a>
        </div>
        <div class="carousel-item carousel-out">
            <a href="/">
                <img src="https://placeimg.com/1000/200/people" class="d-block w-100" alt="...">
            </a>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="post-description">
    <h4>{{input}}</h4>
</div>
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5 text-truncate">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center" id="board">
                {{#Post}}
                    <div class="col mb-5">
                        <a href="/posts/{{id}}">
                        <div class="card h-100">
                            <img src="/postImage/{{thumbnail}}" class="card-img-top" alt="{{title}}" width="200px" height="200px">
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">{{title}}</h5>
                                    <p>{{price}}Ïõê</p>
                                    <p>{{status}}</p>
                                </div>
                            </div>
                        </div>
                        </a>
                    </div>
                {{/Post}}
            </div>
        </div>
    </section>
<input type="hidden" id="id" value="0">
<input type="hidden" id="value" value="{{page.value}}">
<input type="hidden" id="cursor" value="1">
<input type="hidden" id="kind" value="{{page.kind}}">
{{>layout/footer}}
{{>layout/js}}
<script src="/js/post.js"></script>
<script src="/js/scripts.js"></script>
<script>
    window.addEventListener('scroll', () => {
        let scrollLocation = document.documentElement.scrollTop;
        let windowHeight = window.innerHeight;
        let fullHeight = document.body.scrollHeight;

        if(scrollLocation + windowHeight >= fullHeight){
            getter();
        }
    })
</script>
</body>
</html>